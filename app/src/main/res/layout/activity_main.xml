<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fambam.algorithmic.algorithmic.MainActivity">

    <Button
        android:id="@+id/button_to_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_to_bubble"
        android:onClick="toBubbleSort" />

    <Button
        android:id="@+id/button_to_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_to_bubble"
        android:text="@string/button_to_selection"
        android:onClick="toSelectionSort" />

    <Button
        android:id="@+id/button_to_new_graphics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="60dp"
        android:onClick="toNewGraphics"
        android:text="@string/button_to_new_graphics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
